{
  "xsappname": "cap-odata-demo",
  "tenant-mode": "shared",

  "scopes": [
    {
      "name": "$XSAPPNAME.User",
      "description": "Default user scope"
    },
    {
      "name": "$XSAPPNAME.batch.read",
      "description": "Scope for Spring Batch job to read CAP OData"
    }
  ],

  "role-templates": [
    {
      "name": "User",
      "description": "Default user role",
      "scope-references": [
        "$XSAPPNAME.User"
      ]
    },
    {
      "name": "BatchJobRole",
      "description": "Role for Spring Batch job",
      "scope-references": [
        "$XSAPPNAME.batch.read"
      ]
    }
  ],

  "oauth2-configuration": {
    "redirect-uris": [
      "https://*.cfapps.*.hana.ondemand.com/**"
    ]
  },

  "foreign-scope-references": [],

  "authorities": []
}
